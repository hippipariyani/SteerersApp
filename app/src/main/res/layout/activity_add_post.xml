<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.heisen_berg.steerersapp.activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:background="@color/colorBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:titleTextColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />
        </android.support.design.widget.AppBarLayout>

        <com.heisen_berg.steerersapp.ui.EditTextIosRegular
            android:id="@+id/et_description"
            android:layout_margin="16dp"
            android:hint="Enter description here..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/iv_image"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_remove_image"
        app:srcCompat="@drawable/ic_clear_white"
        android:background="@drawable/login_button_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="164dp"
        android:layout_width="58dp"
        android:layout_height="58dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_add_image"
        app:srcCompat="@drawable/ic_image_white"
        android:background="@drawable/login_button_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="90dp"
        android:layout_width="58dp"
        android:layout_height="58dp" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_add_post"
        app:srcCompat="@drawable/ic_check_white"
        android:background="@drawable/login_button_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="58dp"
        android:layout_height="58dp" />

</RelativeLayout>
